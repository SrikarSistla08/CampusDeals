rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Businesses are readable by all, writable by owners
    match /businesses/{businessId} {
      allow read: if true;
      allow write: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid);
    }
    
    // Deals are readable by all, writable by business owners
    match /deals/{dealId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Reviews are readable by all, writable by authenticated users
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null && 
        (resource == null || request.resource.data.userId == request.auth.uid);
    }
    
    // Favorites are readable/writable by the user
    match /favorites/{favoriteId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid);
    }
    
    // Redemptions are readable/writable by the user
    match /redemptions/{redemptionId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid);
    }
  }
}

